{% extends 'base.html.twig' %}

{% block title %}Manager{% endblock %}

{% block body %}

    <div class="container bg-info text-center text-white">

        <div class="example-wrapper">
            <br>
            <h1>Dashboard Manager</h1><br>

            <table style="width:100%">
                <tr>
                    <th><h3>Open tickets</h3></th>
                    <th><h3>Closed tickets</h3></th>
                    <th><h3>Re-opened tickets</h3></th>
                    <th><h3>% Re-opened tickets</h3></th>

                    <a class="btn btn-primary" name="submit" type="submit" href="{{ path('agent_index') }}">Go to
                        ticket overview </a><br>
                </tr>
                <br>
            </table>
            <table style="width:100%">
                <tr>
                    <th><H2>{{ dashboardTotalOpenTickets }}</H2></th>
                    <th><H2>{{ dashboardTotalClosedTickets }}</H2></th>
                    <th><H2>{{ dashboardTotalClosedTickets }}</H2></th>
                    <th><H2>{{ dashboardTotalClosedTickets }}</H2></th>
                </tr>
            </table>
        </div>
    </div>

    <div class="container bg-light text-white">

        <table class="table">
            <h1>Overview users</h1>
            <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>Roles</th>
                <th>LastName</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.FirstName }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>{{ user.LastName }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('user_new') }}">Create new</a>


    </div>
{% endblock %}
