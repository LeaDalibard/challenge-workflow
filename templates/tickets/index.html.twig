{% extends 'base.html.twig' %}

{% block title %}Tickets index{% endblock %}

{% block body %}

<div class="container bg-info text-white">

    <h1>My tickets</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ticket Status</th>
                <th>Ticket Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.ticketStatus }}</td>
                <td>{{ ticket.content }}</td>
                <td>
                    <a href="{{ path('tickets_show', {'id': ticket.id}) }}">show</a>
                    <a href="{{ path('tickets_edit', {'id': ticket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tickets_new') }}">Create new</a>

</div>
{% endblock %}
