{% extends 'base.html.twig' %}

{% block title %}Tickets index{% endblock %}

{% block body %}

    <h1>Tickets index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Ticket Status</th>
                <th>Ticket Priority</th>
                <th>Ticket Content</th>
                <th>Created by : </th>
                <th>Assigned to : </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ ticket.id }}</td>
                <td>{{ ticket.ticketStatus }}</td>
                <td>{{ ticket.ticketPriority }}</td>
                <td>{{ ticket.content }}</td>
                <td>{{ ticket.createdBy.firstName}} {{ ticket.createdBy.lastName}}</td>
                <td>{{ ticket.assignedTo.firstName}} {{ ticket.assignedTo.lastName}}</td>
                <td>
                    <a href="{{ path('tickets_show', {'id': ticket.id}) }}">show</a>
                    <a href="{{ path('tickets_edit', {'id': ticket.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comments_new') }}">Create new</a>

{% endblock %}
